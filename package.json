{
  "name": "wp-pulse",
  "version": "1.0.0",
  "description": "Pulse tracks user activity for logged in users in stunning detail.",
  "main": "pulse.php",
  "scripts": {
    "assets:build": "wp-scripts build assets/src/js/admin.js --output-path=assets/build",
    "assets:start": "wp-scripts start assets/src/js/admin.js --output-path=assets/build",
    "assets:start:hot": "wp-scripts start assets/src/js/admin.js --output-path=assets/build --hot",
    "composer": "wp-env run cli --env-cwd=wp-content/plugins/pulse composer",
    "env:start": "wp-env start",
    "env:stop": "wp-env stop",
    "env:destroy": "wp-env destroy",
    "env:reset": "wp-env destroy && wp-env start",
    "env:logs": "wp-env logs",
    "env:cli": "wp-env run cli wp",
    "env:shell": "wp-env run cli bash",
    "format-php": "npm run composer fix",
    "lint-php": "npm run composer lint"
  },
  "keywords": [
    "wordpress",
    "plugin",
    "pulse",
    "activity",
    "log",
    "track"
  ],
  "author": "Scott Weaver",
  "license": "GPL-2.0-or-later",
  "devDependencies": {
    "@wordpress/env": "^10.29.0",
    "@wordpress/scripts": "^30.22.0"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tdlm/pulse.git"
  }
}
